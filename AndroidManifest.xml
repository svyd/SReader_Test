<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.trinetix.sreader"
      android:versionCode="1"
      android:versionName="1.0"
      android:installLocation="preferExternal">
      <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
         <uses-permission  android:name="android.permission.WRITE_SETTINGS"/>
         <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name="com.sreader.SreaderMain"
            android:configChanges="orientation|keyboardHidden"
                  android:label="@string/app_name"
                  android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                               
            </intent-filter>
          
        </activity>
        <activity android:name="com.sreader.RunRead"
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:configChanges="orientation|keyboardHidden"></activity>
        
        <activity android:name="com.sreader.store.store_itemlib"></activity>
        
        <activity android:name="com.sreader.BookDetailed"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
       <activity android:name="com.sreader.chapter.Chapters"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
       <activity android:name="com.sreader.chapter.ChaptersFromBd"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        <activity android:name="com.sreader.SearchFile.FileDetailed"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        <activity android:name="com.sreader.visibleAllText.ListAllText"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        <activity android:name="com.sreader.bookmark.BookmarksFromBd"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
         <activity android:name="com.sreader.bookmark.Bookmarks"
            android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
    </application>
    

    
    <uses-sdk android:minSdkVersion="5" />

</manifest> 